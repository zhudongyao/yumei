<div class="h50">
<span class="title">学生管理</span>
<span><%= link_to "添加正式学员", new_formal_student_admin_students_path, class: "layui-btn layui-btnn fr mr10" %><span>
<span><%= link_to "添加意向学员", new_admin_student_path, class: "layui-btn layui-btnn fr mr20" %><span>
</div>

<table class="layui-table">
  <colgroup>
  </colgroup>
  <thead>
    <tr>
      <th>学生姓名</th>
      <th>家长姓名</th>
      <th>家长联系方式</th>
      <th>学生类型</th>
      <th>出生日期</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.parent_name %></td>
        <td><%= student.mobile %></td>
        <td><%= student.status %></td>
        <td><%= student.born_at %></td>
        <td>
          <ul class="layui-nav layui-bg-green cz-select-ul" lay-filter="">
            <li class="layui-nav-item">
              <a class="lh30" style="padding-left: 13px" href="javascript:;">操作</a>
              <dl class="layui-nav-child">
                <dd><%= link_to "修改", edit_admin_student_path(student) %></dd>
                <dd><%= link_to "查看", admin_student_path(student) %></dd>
              </dl>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
