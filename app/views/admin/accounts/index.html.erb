<div class="h50">
<span class="title">账户管理</span>
<span><%= link_to "添加", new_admin_account_path, class: "layui-btn layui-btnn fr" %><span>
</div>

<table class="layui-table">
  <colgroup>
    <col width="150">
    <col width="200">
    <col>
  </colgroup>
  <thead>
    <tr>
      <th>账户名</th>
      <th>账户号</th>
      <th>初始金额</th>
      <th>总收入</th>
      <th>总支出</th>
      <th>余额</th>
      <th>创建人</th>
      <th>状态</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <th><%= account.name %></th>
        <th><%= account.card_number %></th>
        <th><%= account.initial_total %>元</th>
        <th><%=  %></th>
        <th><%=  %></th>
        <th><%=  %></th>
        <th><%= account.user.try(:user_name) || account.user.try(:mobile) %></th>
        <% status_class = account.status == 1 ? "" : "red" %>
        <th class=<%= status_class %>><%= Account::STATUS[account.status] %></th>
        <% status = account.status == 1 ? "禁用" : "启用" %>
        <th><%= link_to "#{status}", change_status_admin_account_path(account, status: status), class: "layui-btn layui-btn-sm", method: :post, data: { confirm: "確定要#{status}吗? 请谨慎操作！" } %></th>
      </tr>
    <% end %>
  </tbody>
</table>
